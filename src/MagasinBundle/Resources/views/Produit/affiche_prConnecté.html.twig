    {% block contenu %}
        <div class="wrapper">
            <!-- Sidebar Holder -->


            <!-- Page Content Holder -->
            <div id="content">

                <div class="row">
                    {% for produit in produits %}

                        <div class="col-lg-4 col-md-6 mb-4 oumaima" style="width: 300px ;border-radius: 15px">
                            <div class="card h-100 " style="height:600px; ">
                                <a href="#"><img class="card-img-top image" src="{{asset('img/produit/'~produit.photoProduit )}}" style="height:270px"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="#">{{ produit.libelle }}</a>
                                    </h4>
                                    <h5> {{ produit.Prix }}DT </h5>
                                    <h5>{{ produit.description }}</h5>
                                    <p class="card-text"></p>
                                </div>

                                <div class="action" style="padding: 12px">
                                    {% if produit.Quantite==0 %}
                                        <a class="add-to-cart btn btn-default " style="width: 220px;background: #0BA898;" disabled="" >Ajouter au panier</a>

                                    {% else %}
                                        <a class="add-to-cart btn btn-default " style="width: 220px;background: #0BA898;"  href="{{ path('ajoutProduit_p',{'idProduit': produit.idProduit,'prix':produit.prix}) }}" >Ajouter au panier</a>
                                    {% endif %}
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted"></small></div>

                            </div>
                        </div>

                    {% endfor %}


                </div>
