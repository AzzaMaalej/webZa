{% extends "@Zanimaux/Layout.html.twig" %}
{% block head %}
    {{ parent() }}
    <title>{% block title %}Nos Produits{% endblock %}</title>
    {% block stylesheet %}
        {{ parent() }}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <link rel="stylesheet" href="{{ asset('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js') }}">
        <!-- Our Custom CSS -->
        <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css') }}">
        <link rel="stylesheet" href={{ asset('Produit/shop-homepage.css') }}>
        <script src="{{ asset('Produit/vendor/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('Produit/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <link href="{{ asset('Produit/imageProduit.css') }}" rel="stylesheet">


    {% endblock %}
{% endblock %}

{% block menu %}
    <section class="menu-section" style="margin-top:-15px">
        <div class="container">
            <div class="row ">
                <div class="col-md-12">

                    <div class="navbar-collapse collapse ">
                        <ul id="menu-top" class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('redirect') }}">Accueil </a></li>
                            <li><a href="{{ path('afficherCabinetsFront') }}"> Veterinaire </a></li>
                            <li><a href="{{ path('afficher_refuge') }}"> Refuge </a></li>
                            <li ><a href="{{ path('affiche_m') }}" class="menu-top-active">Magasin </a></li>
                            <li><a href="{{ path('listparc') }}"> Dresseur & pet-sitter </a></li>
                            <li><a href="{{ path('consulter_a') }}"> Annonce</a></li>
                            <li><a href="{{ path('read_e') }}">evenement</a></li>
                        </ul>
                    </div>

                </div>

            </div>
        </div>
    </section>
{% endblock %}
{% block contenu %}

    <div class="below-slideshow">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="txt-block">
                        <h1 class="head-line">Nos Produits </h1>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="wrapper">
        <!-- Sidebar Holder -->


        <!-- Page Content Holder -->
        <div id="content">

            <div class="row">
                {% for produit in produits %}
                    <div class="col-lg-4 col-md-6 mb-4 oumaima" style="width: 300px; border-radius: 15px">
                        <div class="card h-100 " style="height:600px; ">
                            <a href="#"><img class="card-img-top" src="{{asset('img/produit/'~produit.photoProduit )}}" ></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">{{ produit.libelle }}</a>
                                </h4>
                                <h5> {{ produit.prix }}DT</h5>
                                <p class="card-text"></p>
                            </div>
                            <div class="action" style="padding: 12px">
                                <a class="add-to-cart btn btn-default " style="width: 220px;background: #0BA898;" disabled="" >Ajouter au panier</a>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->



    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script defer src="{{ asset('https://use.fontawesome.com/releases/v5.0.6/js/all.js') }}"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.O/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
{% endblock %}
